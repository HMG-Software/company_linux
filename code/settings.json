{
    "cSpell.language": "en,de,en-GB,en-US,de-DE",
    "cSpell.words": [
        "odoo",
        "comodel",
        "onchange",
        "ondelete",
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.minimap.renderCharacters": false,
    "files.exclude": {
        ".classpath": true,
        ".factorypath": true,
        ".project": true,
        ".settings": true,
        "__pychache__": true,
        "*.pyc": true,
    },
    "github.copilot-labs.showBrushesLenses": true,
    "github.copilot-labs.showTestGenerationLenses": true,
    "git.allowForcePush": true,
    "git.autofetch": true,
    "git.autoRepositoryDetection": "openEditors",
    "git.autoStash": true,
    "git.branchValidationRegex": "feature-wp-[0-9]{5,6}",
    "git.commandsToLog": [
        "push",
        "rebase",
        "commit",
    ],
    "git.confirmSync": false,
    "git.fetchOnPull": true,
    "git.pullBeforeCheckout": true,
    "gitlens.advanced.messages": {
        "suppressCreatePullRequestPrompt": true,
    },
    "gitlens.gitCommands.skipConfirmations": [
        "fetch:command",
        "switch:command",
        "push:command",
        "branch-create:command",
    ],
    "indentRainbow.includedLanguages": [
        "json",
        "jsonc",
        "yaml",
        "python",
        "xml",
    ],
    // broken
    // "pylint.args": [
    //    "-d C0114,C0115,C0116,C8101,E0401",
    //    "--load-plugins=pylint_odoo",
    //],
    "security.workspace.trust.untrustedFiles": "open",
    "telemetry.telemetryLevel": "off",
    "terminal.integrated.copyOnSelection": true,
    "window.titleBarStyle": "custom",
}
